<div class="comments">
    {{!-- using each helper to iterate over the comments array --}}
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{!-- passing the helper function with the create_at --}}
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>